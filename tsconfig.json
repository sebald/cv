{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": ["es2017", "dom"],
    "sourceMap": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react",
    "moduleResolution": "node",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "suppressImplicitAnyIndexErrors": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "plugins": [
      {
        "name": "typescript-styled-plugin",
        "tags": [
          "css",
          "media",
          "styled",
          "suit",
        ]
      }
    ]
  },
  "exclude": [
    ".cache",
    "coverage",
    "node_modules",
    "dist"
  ]
}